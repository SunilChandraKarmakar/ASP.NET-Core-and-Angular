@using Models
@model IEnumerable<Country>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Country Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <a asp-action="Create" asp-controller="Country" class="btn btn-success">Create Country</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Country item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-route-id="@item.Id" asp-action="Edit" asp-controller="Country" class="btn btn-info">Edit</a>
                            <a asp-route-id="@item.Id" asp-action="Delete" asp-controller="Country" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


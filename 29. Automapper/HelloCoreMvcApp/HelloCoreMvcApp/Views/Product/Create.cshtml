@using HelloCoreMvcApp.Models.Product
@model ProductCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Create Product</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Create" asp-controller="Product">
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-lable">Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="col-md-2 control-lable">Category</label>
                <div class="col-md-10">
                    <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-control">
                        <option value="">-- Select Category --</option>                        
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-md-2 control-lable">Price</label>
                <div class="col-md-10">
                    <input type="number" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="col-md-4 control-lable">Product Activity</label>
                <div class="col-md-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IsActive" value="true">
                        <label class="form-check-label" for="inlineRadio1">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IsActive" value="false">
                        <label class="form-check-label" for="inlineRadio2">No</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>                                                                             
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-lable">Description</label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-info">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
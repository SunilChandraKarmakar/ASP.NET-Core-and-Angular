@using Models
@model City

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    List<Country> CountryList = ViewBag.CountryList;
}

<h1>Edit City</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Edit" asp-controller="City">
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-lable">City Name</label>
                <div class="col-md-4">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CountryId" class="col-md-2 control-lable">Country Name</label>
                <div class="col-md-4">
                    <select asp-for="CountryId" asp-items="ViewBag.CountryListItem" class="form-control">
                                                
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-info">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


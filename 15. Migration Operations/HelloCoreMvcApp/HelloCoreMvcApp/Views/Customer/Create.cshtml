@using Models
@model Customer
@{
    Layout = "_DashboardLayout";
}

<h4>Create Customer</h4>
<form method="post" asp-action="Create" asp-controller="Customer">
    <div class="form-group">
        <label for="Name" class="col-md-2 control-lable">Name</label>
        <div class="col-md-10">
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="Address" class="col-md-2 control-lable">Address</label>
        <div class="col-md-10">
            <select asp-for="Address" asp-items="@ViewBag.AddressList" class="form-control">
                <option value="">-- Select Address --</option>
            </select>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
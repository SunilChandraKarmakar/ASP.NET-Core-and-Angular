@model Customer
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h4>Create Customer</h4>
        <form method="post" asp-action="Create" asp-controller="Customer">
            <div class="form-group">
                <label for="Name" class="col-md-2 control-lable">Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="Address" class="col-md-2 control-lable">Address</label>
                <div class="col-md-10">
                    <select asp-for="Address" asp-items="@ViewBag.AddressList" class="form-control">
                        <option value="">-- Select Address --</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save"/>
            </div>
        </form>
    </div>
</body>
</html>

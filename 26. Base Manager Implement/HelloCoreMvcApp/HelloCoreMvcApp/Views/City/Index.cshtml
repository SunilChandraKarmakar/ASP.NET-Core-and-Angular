@using Models
@model IEnumerable<City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>City Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <a asp-action="Create" asp-controller="City" class="btn btn-success">Create City</a>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>City Name</th>
                    <th>Country Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (City item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Country.Name</td>
                        <td>
                            <a asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-info">Edit</a>
                            <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


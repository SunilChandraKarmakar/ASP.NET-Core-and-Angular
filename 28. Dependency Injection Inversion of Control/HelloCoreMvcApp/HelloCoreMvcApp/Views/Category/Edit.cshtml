@using Models
@model Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Edit Category</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Edit" asp-controller="Category">
            <div class="form-group">
                <label asp-for="Code" class="col-md-2 control-lable">Code</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-lable">Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">                 
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-primary"/>
                    <a asp-action="Index" asp-controller="Category" class="btn btn-info">Back To List</a>
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </div>
        </form>
    </div>
</div>


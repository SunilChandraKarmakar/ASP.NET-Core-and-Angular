@using Models
@model Customer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Edit Customer</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Edit" asp-controller="Customer">
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-lable">Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-2 control-lable">Address</label>
                <div class="col-md-10">
                    <select asp-for="Address" asp-items="@ViewBag.AddressList" class="form-control">
                    </select>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ContactNo" class="col-md-5 control-lable">Contact No</label>
                <div class="col-md-10">
                    <input type="number" asp-for="ContactNo" class="form-control" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <a asp-action="Index" asp-controller="Customer" class="btn btn-info">Back To List</a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


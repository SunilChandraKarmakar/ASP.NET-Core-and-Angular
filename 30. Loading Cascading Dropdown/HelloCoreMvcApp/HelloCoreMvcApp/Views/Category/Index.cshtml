@using Models
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Category Details</h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <a asp-action="Create" asp-controller="Category" class="btn btn-success">Create Category</a>
    </div>
</div>
<div class="row" id="showtable">
    <div class="col-md-8">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-info">Edit</a>
                            <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

